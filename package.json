{
  "name": "botlerplate",
  "version": "1.2.1",
  "description": "Bot framework by Recast.AI",
  "scripts": {
    "build": "babel src -d build",
    "lint": "eslint src",
    "test:watch": "ava test --watch",
    "test": "ava test",
    "test:cover": "nyc ava test",
    "emulator": "babel-node ./src/emulator.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RecastAI/botlerplate.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "arrow-parens": 0,
      "class-methods-use-this": 0,
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "keywords": [
    "chatbots",
    "bots",
    "ai",
    "nlp",
    "recast",
    "Recast.AI"
  ],
  "author": "Francois Triquet <francois.triquet@recast.ai> (https://recast.ai)",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "nodemon": "^1.10.2",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "sinon-mongoose": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.14.0",
    "bot-dialog-manager": "^1.1.2",
    "lodash": "^4.16.2",
    "mongoose": "^5.3.9",
    "nyc": "^8.3.0",
    "require-all": "^2.0.0"
  }
}
